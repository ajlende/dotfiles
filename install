#!/bin/zsh

install() {
	case $1 in
		all)
			stow --no-folding \
				alacritty \
				awesome \
				base16 \
				bat \
				bin \
				git \
				mime \
				neofetch \
				npm \
				nvim \
				pam \
				polybar \
				spotify \
				startpage \
				vscode \
				xorg \
				zsh
			;;
		*)
			stow --no-folding "$@"
			;;
	esac
}

install "$@"

