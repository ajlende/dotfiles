{
	"workbench.colorTheme": "Monokai Pro",
	"workbench.startupEditor": "newUntitledFile",

	"editor.fontFamily": "'Dank Mono', 'Fira Code', 'Noto Sans Mono', 'Noto Color Emoji', 'EmojiOne', monospace",
	"editor.fontLigatures": true,
	"editor.minimap.maxColumn": 100,
	"editor.rulers": [80, 100, 120],
	"editor.formatOnSave": true,

	"files.insertFinalNewline": true,
	"files.associations": {
		"*.rasi": "less"
	},

	"color-highlight.markerType": "dot-before",

	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},

	"prettier.useTabs": true,

	"vim.incsearch": true,
	"vim.easymotion": true,
	"vim.useSystemClipboard": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": ["<space>"],
			"commands": ["vspacecode.space"]
		}
	],
	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": ["<space>"],
			"commands": ["vspacecode.space"]
		}
	],
	"vspacecode.bindingOverrides": [
		{
			"keys": "b.h",
			"name": "Focus left editor group",
			"type": "command",
			"command": "workbench.action.navigateLeft"
		},
		{
			"keys": "b.j",
			"name": "Focus below editor group",
			"type": "command",
			"command": "workbench.action.navigateDown"
		},
		{
			"keys": "b.k",
			"name": "Focus above editor group",
			"type": "command",
			"command": "workbench.action.navigateUp"
		},
		{
			"keys": "b.l",
			"name": "Focus right editor group",
			"type": "command",
			"command": "workbench.action.navigateRight"
		}
	],
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"workbench.iconTheme": "Monokai Pro Icons",
	"window.zoomLevel": 1,
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
